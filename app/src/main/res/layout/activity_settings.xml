<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="@dimen/_16dp"
    tools:context=".settings.ui.SettingsActivity">

    <LinearLayout
        android:id="@+id/settings_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button_settings_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/TitleText"
            android:layout_marginStart="@dimen/_12dp"
            android:text="@string/settings" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/dark_theme"
            android:textColor="?attr/textColor"
            android:textFontWeight="400"
            android:textSize="@dimen/_16sp"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_app"
        style="@style/SettingsScreenLinearLayout"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            style="@style/SettingsScreenText"
            android:text="@string/share_text" />

        <ImageView
            style="@style/SettingsScreenImage"
            android:src="@drawable/ic_share" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        style="@style/SettingsScreenLinearLayout"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            style="@style/SettingsScreenText"
            android:text="@string/write_to_support" />

        <ImageView
            style="@style/SettingsScreenImage"
            android:src="@drawable/ic_support" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/privacy_policy"
        style="@style/SettingsScreenLinearLayout"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            style="@style/SettingsScreenText"
            android:text="@string/privacy_policy" />

        <ImageView
            style="@style/SettingsScreenImage"
            android:src="@drawable/ic_chevron" />

    </LinearLayout>

</LinearLayout>
